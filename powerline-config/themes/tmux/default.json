{
  "default_module": "powerline.segments.common",
  "segment_data": {
    "uptime": {
      "before": "⇑  "
    }
  },
  "segments": {
    "right": [
      {
        "name": "weather",
        "args": {
          "unit": "F",
          "temp_coldest": 40,
          "temp_hottest": 90,
          "icons": {
            "day":           "☀️ ",
            "blustery":      "💨 ",
            "rainy":         "☔️ ",
            "cloudy":        "☁️ ",
            "snowy":         "❄️ ",
            "stormy":        "⚡️ ",
            "foggy":         "⛅️ ",
            "sunny":         "☀️ ",
            "night":         "🌘 ",
            "windy":         "💨 ",
            "not_available": "❓ ",
            "unknown":       "⁉️ "
          }
        }
      },
      {
        "name": "battery",
        "args": {
          "gamify": true
        }
      },
      {
        "name": "date",
        "args": {
          "format": " %H:%M",
          "istime": true
        }
      },
      {
        "name": "hostname"
      }
    ]
  }
}
