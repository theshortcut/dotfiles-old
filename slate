config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config checkDefaultsOnLoad true

# Monitor Aliases
alias mon-retina 1440x900
alias mon-extern 1920x1080

# Push Bindings
bind right:ctrl;cmd  push right bar-resize:screenSizeX/3
bind left:ctrl;cmd   push left  bar-resize:screenSizeX/3
bind up:ctrl;cmd     push up    bar-resize:screenSizeY/2
bind down:ctrl;cmd   push down  bar-resize:screenSizeY/2

# Resize Bindings
bind right:shift;alt;cmd       resize +10% +0
bind left:shift;alt;cmd        resize -10% +0
bind up:shift;alt;cmd          resize +0   -10%
bind down:shift;alt;cmd        resize +0   +10%
bind right:shift;alt;cmd;ctrl  resize -10% +0 bottom-right
bind left:shift;alt;cmd;ctrl   resize +10% +0 bottom-right
bind up:shift;alt;cmd;ctrl     resize +0   +10% bottom-right
bind down:shift;alt;cmd;ctrl   resize +0   -10% bottom-right

# Nudge Bindings
bind right:shift;alt nudge +10% +0
bind left:shift;alt  nudge -10% +0
bind up:shift;alt    nudge +0   -10%
bind down:shift;alt  nudge +0   +10%

# Window Hints
bind esc:cmd hint

# Layouts
layout 1monitor  'Sparrow':REPEAT       corner top-left     resize:(screenSizeX/3)*2;screenSizeY     ${mon-retina}
layout 1monitor  'Tweetbot':REPEAT      corner top-right    resize:(screenSizeX/3);(screenSizeY/3)*2 ${mon-retina}
layout 1monitor  'Messages':REPEAT      corner bottom-right resize:(screenSizeX/3);screenSizeY/2     ${mon-retina}
layout 1monitor  'Google Chrome':REPEAT corner top-left     resize:screenSizeX;screenSizeY           ${mon-retina}

layout 2monitors 'Sparrow':REPEAT       corner top-left     resize:(screenSizeX/3)*2;screenSizeY     ${mon-retina}
layout 2monitors 'Tweetbot':REPEAT      corner top-right    resize:(screenSizeX/3);(screenSizeY/3)*2 ${mon-retina}
layout 2monitors 'Messages':REPEAT      corner bottom-right resize:(screenSizeX/3);screenSizeY/2     ${mon-retina}
layout 2monitors 'Google Chrome':REPEAT corner top-left     resize:screenSizeX;screenSizeY           ${mon-retina}

# Default Layouts
default 1monitor  resolutions:${mon-retina}
default 2monitors resolutions:${mon-retina};${mon-extern}

# Layout Bindings
bind 1:ctrl;alt layout 1monitor
bind 2:ctrl;alt layout 2monitors
