print "making tmp dir"
mkdir /tmp/chromedownload

pushd /tmp/chromedownload

print "checking latest build number"
curl http://build.chromium.org/buildbot/snapshots/chromium-rel-mac/LATEST -o /tmp/chromedownload/LATEST --silent
LATEST=`cat /tmp/chromedownload/LATEST`
print $LATEST

print "downloading latest build"
curl http://build.chromium.org/buildbot/snapshots/chromium-rel-mac/$LATEST/chrome-mac.zip -o /tmp/chromedownload/chrome-mac.zip

print "unzipping"
unzip -qq /tmp/chromedownload/chrome-mac.zip

print "copying"
rm -rf /Applications/Chromium.app
cp -R /tmp/chromedownload/chrome-mac/Chromium.app /Applications


print "cleaning up"
rm -rf /tmp/chromedownload

popd
